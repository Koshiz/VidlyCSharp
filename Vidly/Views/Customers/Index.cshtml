@model IEnumerable<Vidly.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if(!Model.Any())
    {
        <p>We dont have any cutomers yet</p>
    }

else
    {
        <table class="table table-bordered table-hover">
            <thread>
                <tr>
                    <th>Customers</th>
                </tr>
            </thread>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <th>@Html.ActionLink(@customer.Name, "Details", "Customers", new {id = customer.Id}, null)</th>
                    </tr>
                }
            </tbody>
        </table>
    }
